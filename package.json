{
  "name": "lexorbital-core",
  "version": "0.1.0",
  "description": "The core engine for LexOrbital - boot system, module loader, and shared contracts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lexorbital.module.json"
  ],
  "scripts": {
    "install:all": "pnpm install -r",
    "dev": "tsc --watch",
    "build": "tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:ui": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "node .husky/install.mjs",
    "release": "standard-version",
    "docs:generate:html": "./scripts/generate-docs.sh html",
    "docs:clean": "rm -rf docs/generated",
    "docker:dev": "docker-compose -f infra/docker-compose.local.yml up",
    "docker:dev:d": "docker-compose -f infra/docker-compose.local.yml up -d",
    "docker:dev:down": "docker-compose -f infra/docker-compose.local.yml down",
    "docker:dev:build": "docker-compose -f infra/docker-compose.local.yml up --build",
    "docker:dev:logs": "docker-compose -f infra/docker-compose.local.yml logs -f",
    "backend:dev": "pnpm --filter @lexorbital/back-ring dev",
    "backend:build": "pnpm --filter @lexorbital/back-ring build",
    "frontend:dev": "pnpm --filter @lexorbital/front-ring dev",
    "frontend:build": "pnpm --filter @lexorbital/front-ring build",
    "depcruise": "depcruise --config .dependency-cruiser.cjs frontend/src backend/src config tests scripts",
    "depcruise:validate": "depcruise --config .dependency-cruiser.cjs --output-type err frontend/src backend/src config tests scripts",
    "depcruise:text": "depcruise --config .dependency-cruiser.cjs --output-type text -f docs/dependency-graphs/dependency-report.txt frontend/src backend/src config tests scripts",
    "depcruise:html": "depcruise --config .dependency-cruiser.cjs --output-type err-html -f docs/dependency-graphs/dependency-graph.html frontend/src backend/src config tests scripts",
    "depcruise:graph": "depcruise --config .dependency-cruiser.cjs --output-type dot -f docs/dependency-graphs/dependency-graph.dot frontend/src backend/src config tests scripts",
    "depcruise:archi": "depcruise --config .dependency-cruiser.cjs --output-type archi -f docs/dependency-graphs/dependency-archi.svg frontend/src backend/src config tests scripts"
  },
  "keywords": [
    "lexorbital",
    "core",
    "module",
    "typescript",
    "infrastructure",
    "ecosystem"
  ],
  "author": "@YohanGH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YohanGH/lexorbital-core"
  },
  "engines": {
    "node": ">=24.11.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/types": "20.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/github": "12.0.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "@vitest/coverage-v8": "4.0.12",
    "dependency-cruiser": "16.10.4",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.31.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.11",
    "semantic-release": "25.0.2",
    "standard-version": "^9.5.0",
    "supertest": "7.1.4",
    "typescript": "5.9.3",
    "vitest": "4.0.12"
  }
}
